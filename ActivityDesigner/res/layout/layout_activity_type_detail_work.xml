<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            style="@style/activity_type_detail_main_style">

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="允许投票" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" 
                android:layout_marginTop="8dip">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="允许聊天" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" 
                android:layout_marginTop="8dip">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新建相册" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/activity_type_detail_main_style" >
            
             <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView1"
                    android:text="新建任务" 
                    android:textColor="@color/White"
                    style="@style/activity_type_detail_item_style"/>

            </LinearLayout>

             <Button
                 android:id="@+id/type_detail_date_look"
                 style="@style/activity_type_detail_look_style" 
                 android:layout_marginTop="50dip"
                 android:text="添加"/>

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dip">

        <LinearLayout
            android:visibility="invisible"
            style="@style/activity_type_detail_main_style">

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView1"
                    android:text="任务1" 
                    android:textColor="@color/White"
                    style="@style/activity_type_detail_item_style"/>


            </LinearLayout>

            <Button
                android:id="@+id/type_detail_name_look"
                style="@style/activity_type_detail_look_style"
                android:text="选择"
                android:layout_marginTop="10dip"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="负责人" 
                android:layout_marginLeft="10dip"
                android:textColor="@color/White"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            style="@style/activity_type_detail_main_style" >
            
             <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView1"
                    android:text="任务2" 
                    android:textColor="@color/White"
                    style="@style/activity_type_detail_item_style"/>

            </LinearLayout>

             <Button
                 android:id="@+id/type_detail_date_look"
                 style="@style/activity_type_detail_look_style" 
                 android:layout_marginTop="10dip"
                 android:text="选择"/>

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="负责人"
                 android:layout_marginLeft="10dip"
                 android:textColor="@color/White" />

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dip">

        <LinearLayout
            android:visibility="invisible"
            style="@style/activity_type_detail_main_style">

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView1"
                    android:text="任务3" 
                    android:textColor="@color/White"
                    style="@style/activity_type_detail_item_style"/>


            </LinearLayout>

            <Button
                android:id="@+id/type_detail_name_look"
                style="@style/activity_type_detail_look_style"
                android:text="选择"
                android:layout_marginTop="10dip"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="负责人" 
                android:layout_marginLeft="10dip"
                android:textColor="@color/White"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            style="@style/activity_type_detail_main_style" >
            
             <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView1"
                    android:text="任务4" 
                    android:textColor="@color/White"
                    style="@style/activity_type_detail_item_style"/>

            </LinearLayout>

             <Button
                 android:id="@+id/type_detail_date_look"
                 style="@style/activity_type_detail_look_style" 
                 android:layout_marginTop="10dip"
                 android:text="选择"/>

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="负责人"
                 android:layout_marginLeft="10dip"
                 android:textColor="@color/White" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>