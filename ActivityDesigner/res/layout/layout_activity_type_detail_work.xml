<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout style="@style/activity_type_detail_main_style" >

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/type_detail_work_ballot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:text="允许投票"
                    android:textColor="@color/White" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/type_detail_work_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:text="允许聊天"
                    android:textColor="@color/White" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/type_detail_work_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:text="新建相册"
                    android:textColor="@color/White" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/activity_type_detail_main_style" >

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/activity_type_detail_item_style"
                    android:text="新建任务"
                    android:textColor="@color/White" />
            </LinearLayout>

            <Button
                android:id="@+id/type_detail_work_addtask_button"
                style="@style/activity_type_detail_look_style"
                android:layout_marginTop="50dip"
                android:text="添加" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >

        <LinearLayout
            style="@style/activity_type_detail_main_style"
            android:visibility="invisible" >

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    style="@style/activity_type_detail_item_style"
                    android:text="任务1"
                    android:textColor="@color/White" />
            </LinearLayout>

            <Button
                android:id="@+id/type_detail_work_task1_button"
                style="@style/activity_type_detail_look_style"
                android:layout_marginTop="10dip"
                android:text="选择" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="负责人"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            style="@style/activity_type_detail_main_style"
            android:visibility="invisible" >

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    style="@style/activity_type_detail_item_style"
                    android:text="任务2"
                    android:textColor="@color/White" />
            </LinearLayout>

            <Button
                android:id="@+id/type_detail_work_task2_button"
                style="@style/activity_type_detail_look_style"
                android:layout_marginTop="10dip"
                android:text="选择" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="负责人"
                android:textColor="@color/White" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >

        <LinearLayout
            style="@style/activity_type_detail_main_style"
            android:visibility="invisible" >

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    style="@style/activity_type_detail_item_style"
                    android:text="任务3"
                    android:textColor="@color/White" />
            </LinearLayout>

            <Button
                android:id="@+id/type_detail_work_task3_button"
                style="@style/activity_type_detail_look_style"
                android:layout_marginTop="10dip"
                android:text="选择" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="负责人"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            style="@style/activity_type_detail_main_style"
            android:visibility="invisible" >

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    style="@style/activity_type_detail_item_style"
                    android:text="任务4"
                    android:textColor="@color/White" />
            </LinearLayout>

            <Button
                android:id="@+id/type_detail_work_task4_button"
                style="@style/activity_type_detail_look_style"
                android:layout_marginTop="10dip"
                android:text="选择" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="负责人"
                android:textColor="@color/White" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>