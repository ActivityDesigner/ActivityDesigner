<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            style="@style/activity_type_detail_main_style">

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/type_detail_diet_ballot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="允许投票" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" 
                android:layout_marginTop="8dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/type_detail_diet_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="允许聊天" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" 
                android:layout_marginTop="8dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/type_detail_diet_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新建相册" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/activity_type_detail_main_style" >
            
             <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:text="聚餐类型" 
                    android:textColor="@color/White"
                    style="@style/activity_type_detail_item_style"/>

            </LinearLayout>
            
<LinearLayout
                    android:layout_width="140dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip" >

                    <EditText
                        android:id="@+id/type_detail_diettype_advice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip" >

                    <Spinner
                        android:id="@+id/type_detail_diettype_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
             

        </LinearLayout>

        
    </LinearLayout>
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dip">

        <LinearLayout
            style="@style/activity_type_detail_main_style">
             <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:text="买单建议" 
                    android:textColor="@color/White"
                    style="@style/activity_type_detail_item_style"/>

            </LinearLayout>
            
             <LinearLayout
                    android:layout_width="140dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip" >

                    <EditText
                        android:id="@+id/type_detail_dietbuy_advice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip" >

                    <Spinner
                        android:id="@+id/type_detail_dietbuy_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/activity_type_detail_main_style" >
            
             <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:text="用餐禁忌" 
                    android:textColor="@color/White"
                    style="@style/activity_type_detail_item_style"/>

            </LinearLayout>
            
             <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/type_detail_dietdrink_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否饮酒" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>