<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <RelativeLayout
         style="@style/main_top_bg_style" 
         android:background="@drawable/head_bg_1">

        <TextView
            android:id="@+id/textview1"
            android:text="活动"
            style="@style/main_top_center_style"  />

        <ImageView
            android:id="@+id/activity_album_detail_upload"
            style="@style/main_top_right_style"
            android:src="@drawable/top_camera_icon" />

        <ImageView
            android:id="@+id/activity_album_detail_back"
            android:src="@drawable/top_up_indicator_icon"
            style="@style/main_top_left_style" 
            android:layout_marginLeft="0dip"/>

    </RelativeLayout>

     <app.view.widget.OnlyScrollView 
    android:id="@+id/activity_album_detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/first_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</app.view.widget.OnlyScrollView>
</LinearLayout>