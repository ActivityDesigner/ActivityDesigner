<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bcg006"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/select_contact_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/select_contact_back"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/bt_localsonglist_move_press" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/Royalblue"
            android:textSize="20sp"
            android:text="选择联系人" />

        <ImageView
            android:id="@+id/select_contact_sure"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/abc_ic_cab_done_holo_dark" />

    </RelativeLayout>
    <requestFocus />

    <app.view.widget.ClearEditText
        android:id="@+id/select_contact_filter"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="5dip"
        android:hint="请输入关键字"
        android:textColorHint="@color/White"
        android:singleLine="true"
        android:textSize="15.0dip"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/select_contact_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:divider="@null" />

        <TextView
            android:id="@+id/select_contact_charname"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/sorlistview_show_head_toast_bg"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <app.view.widget.SideBar
            android:id="@+id/select_contact_sidebar"
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center" />
    </FrameLayout>

</LinearLayout>