<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
        android:id="@+id/layout_1"
	 	style="@style/main_top_bg_style">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="cloud and sky"
            android:textColor="@color/White"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/photo_detail_back"
            style="@style/main_top_left_style"
            android:layout_marginLeft="0dip"
            android:src="@drawable/top_up_indicator_icon" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/photo_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_below="@+id/layout_1"
        android:layout_above="@+id/layout_2">
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true" 
            android:layout_marginLeft="20dip">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginRight="10dip"
                android:src="@drawable/feed_button_like_pressed" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginRight="10dip"
                android:src="@drawable/friendactivity_writeicon" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginRight="10dip"
                android:src="@drawable/more_share_icon_normal" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/main_bottom_more" />

        </LinearLayout>

        <TextView
            android:id="@+id/photo_detai_pagenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:text="第一页" />

    </RelativeLayout>

</RelativeLayout>