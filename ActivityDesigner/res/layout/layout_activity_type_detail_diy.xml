<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            style="@style/activity_type_detail_main_style">

            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="允许投票" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" 
                android:layout_marginTop="8dip">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="允许聊天" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" 
                android:layout_marginTop="8dip">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新建相册" 
                    android:textColor="@color/White"
                    android:layout_marginTop="4dip"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/activity_type_detail_main_style" >
            
             <LinearLayout
                android:layout_width="140dip"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_marginTop="20dip"
            style="@style/activity_type_detail_main_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题1"
                    style="@style/activity_type_detail_item_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/type_detail_time_edit"
                    style="@style/activity_type_detail_edit_style"
                	android:textColorHint="@color/White"/>

            </LinearLayout>

            <Button
                android:id="@+id/type_detail_time_look"
                 style="@style/activity_type_detail_look_style"
                 android:layout_marginTop="10dip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dip"
            style="@style/activity_type_detail_main_style" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题2" 
                    style="@style/activity_type_detail_item_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/type_detail_location_edit"
					style="@style/activity_type_detail_edit_style" 
					android:maxLines="3"
					android:textColorHint="@color/White"
					android:textColorHighlight="@color/White"/>

            </LinearLayout>

            <Button
                android:id="@+id/type_detail_location_look"
					style="@style/activity_type_detail_look_style"
					android:layout_marginTop="10dip"/>

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_marginTop="20dip"
            style="@style/activity_type_detail_main_style">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题3"
                    style="@style/activity_type_detail_item_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/type_detail_time_edit"
                    style="@style/activity_type_detail_edit_style"
                	android:textColorHint="@color/White"/>

            </LinearLayout>

            <Button
                android:id="@+id/type_detail_time_look"
                 style="@style/activity_type_detail_look_style"
                 android:layout_marginTop="10dip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dip"
            style="@style/activity_type_detail_main_style" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_bottom_activityinfo" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题4" 
                    style="@style/activity_type_detail_item_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/type_detail_location_edit"
					style="@style/activity_type_detail_edit_style" 
					android:maxLines="3"
					android:textColorHint="@color/White"
					android:textColorHighlight="@color/White"/>

            </LinearLayout>

            <Button
                android:id="@+id/type_detail_location_look"
					style="@style/activity_type_detail_look_style"
					android:layout_marginTop="10dip"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>