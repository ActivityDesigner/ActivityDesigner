<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/info_name" />

                <TextView
                    android:id="@+id/expanding_msginfo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="名称" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/info_date" />

                <TextView
                    android:id="@+id/expanding_msginfo_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="日期" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/info_time" />

                <TextView
                    android:id="@+id/expanding_msginfo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="时间" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/info_place" />

                <TextView
                    android:id="@+id/expanding_msginfo_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="地点" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/info_people" />

                <TextView
                    android:id="@+id/expanding_msginfo_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="联系人" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/expanding_msginfo_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="47dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/info_chat" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/expanding_msginfo_chat"
                android:layout_below="@+id/expanding_msginfo_chat"
                android:text="查看聊天室"
                android:textSize="10sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="15dip"
            android:src="@drawable/icon_note" />

        <TextView
            android:id="@+id/expanding_msginfo_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="5dip"
            android:text="活动备注" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="22dip"
            android:src="@drawable/type_big_1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="2dip"
            android:text="投票情况" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1人同意"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="2dip"
            android:textColor="@color/Royalblue" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0人反对"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="2dip"
            android:textColor="@color/Darkred" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="5dip"
            android:layout_marginBottom="2dip"
            android:src="@drawable/icon_name" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/expanding_msginfo_sure"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/icon_sure" />

        <ImageView
            android:id="@+id/expanding_msginfo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/abc_ic_commit_search_api_holo_light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>