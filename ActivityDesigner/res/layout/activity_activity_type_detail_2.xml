<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="5dp" >

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="活动类型"
                    android:textColor="#ffffffff"
                    android:textScaleX="1.2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/activity_type_detail_typename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="约会"
                    android:textColor="#ffffffff"
                    android:textScaleX="1.2"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加相关活动内容"
                android:textColor="#ffffffff"
                android:textSize="15sp" 
                android:layout_marginLeft="5dip">
            </TextView>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingBottom="30dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rootblock_main_page_one"
            android:onClick="next" />

        <ImageView
            android:id="@+id/iv_two"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rootblock_main_page_two"
            android:onClick="next"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/activity_type_detail2_sure"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/abc_ic_cab_done_holo_dark" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/activity_type_detail2_back"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginTop="14dp"
        android:src="@drawable/abc_ic_ab_back_holo_dark" />

</RelativeLayout>