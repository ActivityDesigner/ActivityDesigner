                    android:layout_width="140dip"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/main_bottom_activityinfo" />

                    <TextView
                        android:id="@+id/textView1"
